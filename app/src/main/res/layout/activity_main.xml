<com.example.hzlinxuanxuan.materialdesignsample.view.SlideHomePage xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ScrollHomePage="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    ScrollHomePage:menuWidth="150dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/menu" />

        <include
            layout="@layout/content"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/space" />

    </LinearLayout>

</com.example.hzlinxuanxuan.materialdesignsample.view.SlideHomePage>
