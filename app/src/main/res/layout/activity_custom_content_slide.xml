<com.example.hzlinxuanxuan.materialdesignsample.view.CustomContentSlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomContentSlideLayout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    CustomContentSlideLayout:leftMenuWidth="150dp"
    CustomContentSlideLayout:rightMenuWidth="100dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/space"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="当前为左右侧滑的菜单栏的demo"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="点击进入其他双向侧滑的demo"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <include layout="@layout/right_menu" />

    </LinearLayout>

</com.example.hzlinxuanxuan.materialdesignsample.view.CustomContentSlideLayout>
